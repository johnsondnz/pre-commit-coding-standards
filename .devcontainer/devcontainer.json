{
    "image": "registry.gitlab.com/computerconceptslimited/ccl.containers/pre_commit:dev.latest",
    "containerUser": "cclops",
    "remoteUser": "cclops",
    "updateRemoteUserUID": true,
    "extensions": [
        "gitlab.gitlab-workflow",
        "ms-python.python",
        "redhat.vscode-yaml",
        "hashicorp.terraform",
        "4ops.packer",
        "visualstudioexptteam.vscodeintellicode",
        "ms-vsliveshare.vsliveshare",
        "vscode-icons-team.vscode-icons",
        "donjayamanne.githistory",
        "eamodio.gitlens",
        "mhutchie.git-graph",
        "waderyan.gitblame"
    ],
    "runArgs": [
        "-v",
        "${localEnv:HOME}/.ssh:/home/cclops/.ssh:ro",
        "-v",
        "${localEnv:HOME}/.gnupg/private-keys-v1.d:/home/cclops/.gnupg/private-keys-v1.d:ro",
        "-v",
        "${localEnv:HOME}/.gnupg/pubring.kbx:/home/cclops/.gnupg/pubring.kbx:ro",
        "-v",
        "${localEnv:HOME}/.gnupg/trustdb.gpg:/home/cclops/.gnupg/trustdb.gpg:ro"
    ],
    "postCreateCommand": ".devcontainer/entrypoint.sh"
}